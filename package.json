{
  "name": "ddn-wallet",
  "productName": "ddn-Wallet-desktop",
  "version": "2.2.0",
  "description": "DDN, Data Delivery Network",
  "main": "./app/main.js",
  "scripts": {
    "start": "cd app && npm run start",
    "start:no-mock": "cd app && npm run start:no-mock",
    "build": "cd app && npm run build",
    "analyze": "cd app && npm run analyze",
    "electron-start": "cross-env NODE_ENV=production cd app && electron . ",
    "dev": "concurrently \"npm run start\" \"wait-on http://localhost:8000 && cd app && cross-env NODE_ENV=development electron .\"",
    "package": "npm run build && cross-env NODE_ENV=development DEBUG_PROD=true build --publish never",
    "package-win32": "npm run build && cross-env NODE_ENV=production build --win --ia32",
    "package-quick": "cross-env NODE_ENV=production build --publish never"
  },
  "browserslist": "electron 1.6",
  "build": {
    "productName": "DDNWallet",
    "appId": "org.develar.ElectronReact",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "target": [
        "zip",
        "dmg"
      ],
      "category": "public.app-category.tools",
      "publish": [
        {
          "provider": "generic",
          "url": "http://otkngwosa.bkt.clouddn.com/ddn/osx/x64"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./resources/icon.ico",
      "publish": [
        {
          "provider": "generic",
          "url": "http://otkngwosa.bkt.clouddn.com/ddn/win32/x32"
        }
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddnlink/ddn-Wallet-desktop.git"
  },
  "author": {
    "name": "DDN Foundation",
    "email": "support@ddn.link",
    "url": "https://github.com/ddnlink"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ddnlink/ddn-Wallet-desktop/issues"
  },
  "keywords": [
    "electron",
    "boilerplate",
    "react",
    "wallet",
    "ddn"
  ],
  "homepage": "https://github.com/ddnlink/ddn-Wallet-desktop#readme",
  "devDependencies": {
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "devtron": "^1.4.0",
    "electron": "^1.8.2",
    "electron-builder": "^19.45.4",
    "electron-connect": "^0.6.2",
    "wait-on": "^2.1.0"
  },
  "dependencies": {
    "antd-pro-merge-less": "0.0.9",
    "electron-is-dev": "^0.3.0"
  },
  "devEngines": {
    "node": "^8.10.0 || >=9.10.0",
    "npm": ">=4.x",
    "yarn": ">=0.21.3"
  }
}
